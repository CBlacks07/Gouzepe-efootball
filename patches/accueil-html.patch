+  const isScore = el => el && (el.matches?.('.score input,[inputmode="numeric"]'));
+  document.addEventListener('beforeinput', (e)=>{
+    if(!isScore(e.target)) return;
+    if(e.data && /\D/.test(e.data)) e.preventDefault();
+  });
