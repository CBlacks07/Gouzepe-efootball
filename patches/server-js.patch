+// ---------- matchdays ----------
+app.get('/matchdays', auth, async (req,res)=>{
+  const seasonId = await currentSeasonId();
+  const { month } = req.query; // ex: 2025-08
+  let sql = `SELECT day FROM matchday WHERE season_id=$1`;
+  const params = [seasonId];
+  if(month && /^\d{4}-\d{2}$/.test(month)){
+    sql += ` AND to_char(day,'YYYY-MM')=$2`;
+    params.push(month);
+  }
+  sql += ` ORDER BY day ASC`;
+  const r = await q(sql, params);
+  ok(res,{ days:r.rows.map(x=>dayjs(x.day).format('YYYY-MM-DD')) });
+});
